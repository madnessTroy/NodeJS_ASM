<% if(!isAuthenticated) { %>
    <nav class="navbar navbar-expand-lg bg-dark">
        <div class="container-fluid">
            <h1 class="navbar-brand fw-bold text-warning fs-1">QUẢN LÝ NHÂN SỰ</h1>
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class=" nav-item text-danger text-center fs-3">Hãy đăng nhập để sử dụng!</li>
            </ul>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-warning fs-4" data-bs-toggle="modal" data-bs-target="#loginModal">
                ĐĂNG NHẬP
            </button>
        </div>
    </nav>
        <!-- Modal -->
        <div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-dark text-warning">
                        <h5 class="modal-title fs-4 px-5">ĐĂNG NHẬP</h5>
                        <button type="button" class="btn-close bg-warning" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                    <!-- Log-in form POST method -->
                        <% if(errorMessage) { %>
                            <p class="text-danger"><%= errorMessage %></p>
                        <% } %>
                        <form action="/login" method="POST">
                            <div class="row g-3 align-items-center my-2">
                                <div class="col-3">
                                    <label for="email" class="col-form-label">Email</label>
                                </div>
                                <div class="col-9">
                                    <input type="email" id="email" name="email" class="form-control w-100">
                                </div>
                            </div>
                            <div class="row g-3 align-items-center my-2">
                                <div class="col-3">
                                    <label for="password" class="col-form-label">Password</label>
                                </div>
                                <div class="col-9">
                                    <input type="password" id="password" name="password" class="form-control w-100">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button type="submit" class="btn btn-warning">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
<!-- Xác thực thành công (đăng nhập hợp lệ) -->
<% } else { %>
    <nav class="navbar navbar-expand-lg bg-dark">
        <div class="container-fluid">
            <h1 class="navbar-brand fw-bold text-warning fs-1">QUẢN LÝ NHÂN SỰ</h1>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent">
            <span class="navbar-toggler-icon btn btn-warning fs-3"></span>
            </button>
            <div class="collapse navbar-collapse nvb" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <!-- Nhân viên tab -->
                    <li class="nav-item fs-4 mx-3">
                        <a class="nav-link text-warning" href="/staff">
                            ĐIỂM DANH
                        </a>
                    </li>
                    <li class="nav-item fs-4 mx-3">
                        <a class="nav-link text-warning" href="/worked">
                            TRA CỨU
                        </a>
                    </li>
                    <li class="nav-item fs-4 mx-3">
                        <a class="nav-link text-warning" href="/covid">
                            COVID-19
                        </a>
                    </li>
                <!-- Quản lí tab -->
                    <% if(isAdmin) { %>
                        <li class="nav-item fs-4 mx-3">
                            <a class="nav-link text-warning" href="/admin/staff-management">
                                QUẢN LÝ
                            </a>
                        </li>
                    <% } %>
                </ul>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            </div>

        <div class="d-flex flex-row">
            <% if(staff) { %>
                <h3 class="text-light pt-2">Xin chào, <%= staff.name !== undefined ? staff.name :  staff[0].userId.name %></h3>
            <% } %>
            <form action="/logout" method="POST">
                <button type="submit" class="btn btn-warning fs-4 mx-2">ĐĂNG XUẤT</button>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            </form>
        </div>
    </nav>
<% } %>
