<!-- HEAD -->
<%- include('../includes/head.ejs')%>
<style>
    .staff-card .btn{
        width: 35%;
        transition: 0.4s ease;
        font-size: 1.4rem;
    }
    .staff-card .btn:hover {
        width: 45%;
        color: yellow;
    }
</style>
    <body>
        <!-- navbar -->
        <%- include('../includes/navbar.ejs', {staff: staff}) %>
        <hr>
        <main class="container-fluid">
            <div class="row">
                <% staff.forEach((data) => { %>
                    <div class="col-lg-3 col-md-6 col-sm-12 mt-2">
                        <div class="card bg-dark" style="min-width: 18rem;">
                            <img src="<%= data.imageUrl %>" class="card-img-top img-thumbnail" title="Xem thÃ´ng tin">
                            <div class="card-body text-center">
                                <h3 class="card-title text-warning"><%= data.name.toUpperCase() %></h3>
                                <input type="hidden" id="hidden" value="<%= isAuthenticated %>">
                                <% if(!data.workStatus) { %>
                                    <div class="staff-card">
                                        <button class="btn btn-secondary w-100" disabled>OFFLINE</button>
                                    </div>
                                <% } else { %>
                                    <div class="staff-card">
                                        <button class="btn btn-warning w-100" disabled>ONLINE</button>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </main>

    </body>
<!-- END -->
<%- include('../includes/end.ejs') %>
<script src="//ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.1.js" type="text/javascript"></script>

<script type="text/javascript">
    $(window).load(function(){
        const isAuthenticated = $('#hidden').val()
        if(isAuthenticated !== true) {
            $('#loginModal').modal('show');
        }
    });
</script>
</html>